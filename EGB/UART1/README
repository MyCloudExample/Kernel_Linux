#Para usar el modulo sin el programa de usuario se usaran los siguientes comandos
#Siempre que el modulo se halla cargado al kernel
#Antes de ejecutar realizar los siguiente pasos

#Limpio el build
make clean

#Compilo el modulo
make all

#cargo el modulo
sudo insmod driver_serial.ko

# Verificar que está cargado
lsmod | grep driver_serial

# Descargar módulo  
sudo rmmod driver_serial

# Verificar que se descargó
lsmod | grep driver_serial

#Comando para la prueba o ejecucion

echo "LED_ON" | sudo tee /dev/pico_serial

echo "LED_OFF" | sudo tee /dev/pico_serial

for i in {1..3}; do
    echo "Ciclo $i - LED_ON"
    echo "LED_ON" | sudo tee /dev/pico_serial
    sleep 1
    echo "Ciclo $i - LED_OFF"
    echo "LED_OFF" | sudo tee /dev/pico_serial
    sleep 1
done